@model HbmBrandSites.ContentPermissions.Models.ContentPermissionSettings

<div class="container">
    <!-- Title Section -->
    <div class="row mb-3">
        <div class="col-12 text-center">
            <h3>@T["Role Based Content Limits"]</h3>
        </div>
    </div>

    <!-- Table for Roles and Article Limits -->
    <div class="row">
        <div class="col-12">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="text-center">@T["Role"]</th>
                        <th class="text-center">@T["Number of Content"]</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var role in Model.RoleArticleLimits.Keys)
                    {
                        <tr>
                            <!-- Role Column -->
                            <td>
                                <label class="form-label">@role</label>
                            </td>

                            <!-- Number of Articles Column -->
                            <td>
                                <input type="number"
                                       asp-for="@Model.RoleArticleLimits[role]"
                                       class="form-control"
                                       placeholder="@T["Enter Number "]" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



